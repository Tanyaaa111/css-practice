<header class="header">
	<div class="">
		{{>logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<img src="{{image}}" alt="Main image" class="main_image">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_description">{{description}}</p>
		<div>
			<a href="{{href}}" class="main_button button">{{button}}</a>
		</div>
	</div>
</div>
{{/with}}

<div class="card">
	{{#each featured}}
	<div class="card_featured">
		<img class="featured_image" src="{{photo}}">
		<h2 class="featured_heading">{{heading}}</h2>
		<p class="featured_info">{{info}}</p>
		<div>
			<a href="{{linkUrl}}" class="featured_link">{{linkText}}</a>
		</div>
	</div>
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<h4 class="actions_heading">{{heading}}</h4>
		<div>
			<a class="actions_button button" href="{{url}}">{{text}}</a>
		</div>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>