<header class="header">
	<a href="#test">
		{{>logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	<div class="info">
		{{#with info}}
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
		{{/with}}
	</div>

	{{#with form}}
	<form class="form">

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<h6 class="updates_title">{{title}}</h6>

	{{#each list}}
	<div class="updates_list">
		<div class="list_photo">32x32</div>
		<div class="list_data">
			<div class="list_nickname">{{nickname}}</div>
			<p class="list_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a class="show_all" href="{{url}}">{{text}}</a>
	{{/with}}

	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<h2 class="expirience_title">{{title}}</h2>
	<div>
		<badge class="badge">{{badge}}</badge>
	</div>
	<div class="expirience_list">
		{{#each list}}
		<div class="expirience_list_item">
			<strong>{{name}}</strong>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>

<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>